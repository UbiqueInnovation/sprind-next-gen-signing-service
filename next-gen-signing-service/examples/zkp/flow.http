    function base64url_encode(str) {
        const buffer = new TextEncoder().encode(str);
        return btoa(Array.from(new Uint8Array(buffer), b => String.fromCharCode(b)).join(''))
            .replace(/\+/g, '-')
            .replace(/\//g, '_')
            .replace(/=+$/, '');
    }

    exports.base64url_encode = base64url_encode

